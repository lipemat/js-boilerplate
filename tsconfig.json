{
  "extends": "./config/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "JS Boilerplate",
  "include": [
    "bin/**/*",
    "config/**/*",
    "helpers/**/*",
    "lib/**/*",
    "jest/**/*",
    "scripts/**/*",
    "src/**/*",
    "types/**/*"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": false
  }
}
